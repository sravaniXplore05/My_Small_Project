<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Question 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Q1: Write Java code to check if a number is even or odd."
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ans1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:drawable/edit_text"
            android:hint="Write your code here"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="8dp" />

        <TextView
            android:id="@+id/correctAns1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#007700"
            android:paddingTop="4dp" />

        <!-- Question 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q2: Java code to find the sum from 1 to 5."
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <EditText
            android:id="@+id/ans2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:drawable/edit_text"
            android:hint="Write your code here"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="8dp" />

        <TextView
            android:id="@+id/correctAns2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#007700"
            android:paddingTop="4dp" />

        <!-- Question 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q3: Java code to check if 'racecar' is a palindrome."
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <EditText
            android:id="@+id/ans3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:drawable/edit_text"
            android:hint="Write your code here"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="8dp" />

        <TextView
            android:id="@+id/correctAns3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#007700"
            android:paddingTop="4dp" />

        <!-- Question 4 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q4: Java code to find factorial of 5."
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <EditText
            android:id="@+id/ans4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:drawable/edit_text"
            android:hint="Write your code here"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="8dp" />

        <TextView
            android:id="@+id/correctAns4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#007700"
            android:paddingTop="4dp" />

        <!-- Question 5 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q5: Java code to count vowels in 'Apple'."
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <EditText
            android:id="@+id/ans5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:drawable/edit_text"
            android:hint="Write your code here"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="8dp" />

        <TextView
            android:id="@+id/correctAns5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#007700"
            android:paddingTop="4dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitLevelThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
